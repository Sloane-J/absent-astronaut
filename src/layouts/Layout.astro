---
import Navigation from '../components/core/Navigation.astro';
import StatsSummary from '../components/dashboard/StatsSummary.astro';
import RoadmapCard from '../components/dashboard/RoadmapCard.astro';
import type { Props as RoadmapCardProps } from '../components/dashboard/RoadmapCard.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const mockRoadmaps: RoadmapCardProps[] = [{
  id: '1',
  title: 'Learn TypeScript',
  description: 'Master TypeScript fundamentals',
  progress: 45,
  totalMilestones: 10,
  completedMilestones: 4,
  status: 'in-progress',
  dueDate: new Date().toISOString()
}];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <Navigation />
    
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>