---
import LogoutButton from "../LogoutButton.astro";

const isActive = (path: string) => Astro.url.pathname === path;
---
<nav class="fixed w-full bg-gray-900/80 backdrop-blur-lg z-50 border-b border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo Section -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-transparent">
            MileStone
          </span>
        </a>
      </div>

      <!-- Main Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a 
          href="/dashboard" 
          class:list={[
            'px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200',
            isActive('/dashboard') 
              ? 'text-blue-400 bg-gray-800' 
              : 'text-gray-300 hover:text-blue-400'
          ]}
        >
          Dashboard
        </a>
        <a 
          href="/roadmap/create" 
          class:list={[
            'px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200',
            isActive('/roadmap/create') 
              ? 'text-blue-400 bg-gray-800' 
              : 'text-gray-300 hover:text-blue-400'
          ]}
        >
          Create Roadmap
        </a>
        <a 
          href="/roadmap/view" 
          class:list={[
            'px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200',
            isActive('/roadmap/view') 
              ? 'text-blue-400 bg-gray-800' 
              : 'text-gray-300 hover:text-blue-400'
          ]}
        >
          View Roadmaps
        </a>
      </div>

      <!-- User Actions -->
      <div class="hidden md:flex items-center space-x-4">
        <a 
          href="/settings"
          class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-blue-400 transition-colors duration-200"
        >
          Settings
        </a>
        <LogoutButton />
      </div>
    </div>
  </div>
</nav>
