---
import { registerUser } from "../lib/firebase/auth";

let email = "";
let password = "";
let confirmPassword = "";

const handleSubmit = async (event) => {
    event.preventDefault();
    
    if (password !== confirmPassword) {
        const errorElement = document.getElementById('error-message');
        errorElement.textContent = "Passwords do not match";
        errorElement.classList.remove('hidden');
        return;
    }

    try {
        await registerUser(email, password);
        window.location.href = "/dashboard"; // Redirect to dashboard after successful signup
    } catch (error) {
        const errorElement = document.getElementById('error-message');
        errorElement.textContent = error.message;
        errorElement.classList.remove('hidden');
    }
};
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-black flex items-center justify-center min-h-screen p-4">
    <div class="max-w-md w-full">
        <!-- Logo/Brand Section -->
        <div class="text-center mb-8">
            <div class="inline-block p-4 rounded-full bg-gradient-to-tr from-indigo-500/20 to-purple-500/20 mb-4">
                <i class="fas fa-user-plus text-4xl text-indigo-400"></i>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
                Create Account
            </h1>
            <p class="text-gray-400 mt-2">Join us to get started</p>
        </div>

        <!-- Signup Form Card -->
        <div class="bg-gradient-to-b from-gray-900 to-black border border-gray-800 rounded-2xl p-8 relative overflow-hidden">
            <!-- Ambient Background Effect -->
            <div class="absolute inset-0 bg-gradient-to-b from-indigo-500/10 to-transparent"></div>
            <div class="absolute -inset-1.5 bg-gradient-to-r from-indigo-500/20 to-purple-500/20 blur-xl opacity-20"></div>
            
            <!-- Form Content -->
            <div class="relative">
                <!-- Error Message -->
                <div id="error-message" class="hidden mb-4 p-3 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-sm">
                </div>

                <form on:submit={handleSubmit} class="space-y-6">
                    <!-- Email Input -->
                    <div class="space-y-2">
                        <label for="email" class="text-sm text-gray-400 ml-1">Email</label>
                        <div class="relative">
                            <input 
                                id="email"
                                type="email" 
                                bind:value={email}
                                placeholder="Enter your email" 
                                required
                                class="w-full px-4 py-3 rounded-xl bg-gray-800/50 border border-gray-700 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 text-white placeholder-gray-500 transition-all duration-300" 
                            />
                            <i class="fas fa-envelope absolute right-4 top-1/2 -translate-y-1/2 text-gray-500"></i>
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-2">
                        <label for="password" class="text-sm text-gray-400 ml-1">Password</label>
                        <div class="relative">
                            <input 
                                id="password"
                                type="password" 
                                bind:value={password}
                                placeholder="Create a password" 
                                required
                                minlength="8"
                                class="w-full px-4 py-3 rounded-xl bg-gray-800/50 border border-gray-700 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 text-white placeholder-gray-500 transition-all duration-300" 
                            />
                            <i class="fas fa-lock absolute right-4 top-1/2 -translate-y-1/2 text-gray-500"></i>
                        </div>
                        <p class="text-xs text-gray-500 ml-1">Must be at least 8 characters long</p>
                    </div>

                    <!-- Confirm Password Input -->
                    <div class="space-y-2">
                        <label for="confirmPassword" class="text-sm text-gray-400 ml-1">Confirm Password</label>
                        <div class="relative">
                            <input 
                                id="confirmPassword"
                                type="password" 
                                bind:value={confirmPassword}
                                placeholder="Confirm your password" 
                                required
                                class="w-full px-4 py-3 rounded-xl bg-gray-800/50 border border-gray-700 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 text-white placeholder-gray-500 transition-all duration-300" 
                            />
                            <i class="fas fa-lock absolute right-4 top-1/2 -translate-y-1/2 text-gray-500"></i>
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="space-y-4">
                        <label class="flex items-center text-sm text-gray-400">
                            <input 
                                type="checkbox" 
                                required
                                class="rounded border-gray-700 bg-gray-800 text-indigo-500 focus:ring-indigo-500 mr-2"
                            >
                            I agree to the <a href="/terms" class="text-indigo-400 hover:text-indigo-300 ml-1">Terms and Conditions</a>
                        </label>
                    </div>

                    <!-- Signup Button -->
                    <button 
                        type="submit"
                        class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 to-indigo-600 text-white font-semibold hover:from-indigo-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-900 transition-all duration-300 transform hover:scale-[1.02]"
                    >
                        Create Account
                    </button>
                </form>

                <!-- Login Link -->
                <p class="text-center mt-6 text-gray-400">
                    Already have an account? 
                    <a href="/login" class="text-indigo-400 hover:text-indigo-300 transition-colors">Sign in</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>